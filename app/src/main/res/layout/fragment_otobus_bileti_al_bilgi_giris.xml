<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ad"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewYolcuBilgileri" />

    <EditText
        android:id="@+id/editTextTextPersonSurname"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Soyad"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <EditText
        android:id="@+id/editTextTextPersonId"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="TC. Kimlik No"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonSurname" />

    <TextView
        android:id="@+id/textViewYolcuBilgileri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:text="Yolcu Bilgileri"
        android:textColor="#850A0A"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonKoltukSatinAl"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Koltuğu Satın Al"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewChip"
        app:layout_constraintVertical_bias="0.38" />

    <EditText
        android:id="@+id/editTextTextPersonMail"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewIletisim" />

    <ImageView
        android:id="@+id/imageViewChip"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="35dp"
        android:background="#00FFFFFF"
        android:src="@drawable/chip1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonCreditNo" />

    <EditText
        android:id="@+id/editTextTextCreditCvc"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="CVC2"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonCreditNo"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonCreditNo" />

    <EditText
        android:id="@+id/editTextTextPersonCreditNo"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:ems="10"
        android:hint="**** **** **** ****"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOdemeBilgileri" />

    <EditText
        android:id="@+id/editTextTextCreditSkt"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="SKT"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonCreditNo"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonCreditNo"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextTextPersonNo"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Telefon Numarası"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonMail" />

    <TextView
        android:id="@+id/textViewOdemeBilgileri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="70dp"
        android:text="Ödeme Bilgileri"
        android:textColor="#850A0A"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonNo" />

    <TextView
        android:id="@+id/textViewIletisim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="70dp"
        android:text="İletişim"
        android:textColor="#850A0A"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonId" />

</androidx.constraintlayout.widget.ConstraintLayout>